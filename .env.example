# PostgreSQL Connection (Primary Database - Recommended)
DATABASE_URL=postgresql://user:password@host:port/database
# Example: postgresql://jharkhandtourism_user:password@dpg-xxx.frankfurt-postgres.render.com/jharkhandtourism

# MongoDB Connection (Legacy - Optional, for migration only)
MONGODB_URI=mongodb://localhost:27017/jharkhand-tourism
# Or MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database

# JWT Secret (Generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-here

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Email Configuration (Nodemailer - for OTP)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here

# Stripe Configuration (Payment Processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_ACCOUNT_ID=acct_your_stripe_account_id

# Server Configuration
PORT=3000

# API Configuration (Frontend to Backend Connection)
# Leave empty for same deployment (frontend and backend together)
# Set to backend URL for separate deployments (e.g., frontend on Vercel, backend on Render)
# NEXT_PUBLIC_API_URL=https://your-backend.onrender.com
NEXT_PUBLIC_API_URL=https://jharkhand-tourism-li3w.onrender.com
